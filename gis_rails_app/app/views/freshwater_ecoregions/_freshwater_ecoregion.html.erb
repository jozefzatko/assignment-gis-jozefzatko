<div class="element">
	<a href="<%= freshwater_ecoregion_path(freshwater_ecoregion) %>">

		<% if freshwater_ecoregion_counter.even? %>

			<div class="ecoregion-element">
					
				<div style="float: left; width: 65%; padding: 0px 0px 0px 12px;">
					<%= freshwater_ecoregion.name %>
				</div>

				<div style="float: left; width: 15%;">
					<%= freshwater_ecoregion.realm %>
				</div>

				<div style="float: left; width: 20%;">
					<%= freshwater_ecoregion.area_km2 %> km2
				</div>
					
					
					
					
			</div>
			
		<% else %>

			<div class="ecoregion-element">
					
				<div style="float: left; width: 65%; padding: 0px 0px 0px 12px; background:#F0F8FF">
					<%= freshwater_ecoregion.name %>
				</div>

				<div style="float: left; width: 15%; background:#F0F8FF">
					<%= freshwater_ecoregion.realm %>
				</div>

				<div style="float: left; width: 20%; background:#F0F8FF">
					<%= freshwater_ecoregion.area_km2 %> km2
				</div>
					
					
					
					
			</div>
						
		<% end %>
		
	</a>
</div>